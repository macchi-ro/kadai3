<main>
<div class="col-md-12">
  <h1>Followers Users</h1>
<% if @users.exists? %>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
       <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.profile_image, size: "50x50" %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followeds.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
       <% else %>
        <p>ユーザーはいません</p>
       <% end %>
      </tbody>
    </table>
  </div>
 </div>
</main>