
<main>
<div class="container px-5 px-sm-0">
       <% if @book.errors.any? %>
       <%= @book.errors.count %>errors prohibited this obj from being saved:
       <ul>
      <% book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
       </ul>
     <% end %>
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
     <% if @user.profile_image.attached? %>
      <%= image_tag current_user.profile_image, size: "200x200" %>
     <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
     <% end %>

   <table class="table">
    <tbody>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </tbody>
   </table>
   <div class="row">
    <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
   </div>

      <h2 class="mt-3">New book</h2>
   <%= form_with model: Book.new do |f| %>
   <div class="form-group">
    <h5>Title</h5>
     <%= f.text_field :title %>
   </div>
   <div class="form-group">
    <h5>Opinion</h5>
     <%= f.text_area :body %>
   </div>
   <div class="form-group">
     <%= f.submit 'Create Book' %>
   </div>
   <% end %>
  </div>
 <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
   <tbody>
    <tr>
      <td><%= link_to user_path(@user.id) do %>
       <%= image_tag @book.user.get_profile_image(100,100) %><br>
       <% end %>
　　　 <%= link_to @book.user.name, user_path(@user.id) %>
      </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>

      <td>
         <% if @book.favorited_by?(current_user) %>
      <p>
      <%= link_to book_favorites_path(@book), method: :delete do %>
        ♥<%= @book.favorites.count %>
      <% end %>
      </p>
      <% else %>
      <p>
      <%= link_to book_favorites_path(@book), method: :post do %>
        ♡<%= @book.favorites.count %>
      <% end %>
      </p>
      <% end %>
      </td>
      <td>
        <p>コメント数：<%= @book.comments.count %></p>
      </td>
      <td>
       <% if @book.user == current_user %>
       <%= link_to "Edit", edit_book_path(@book.id) %>
       <% end %>
      </td>

      <td>
       <% if @book.user == current_user %>
       <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
       <% end %>
      </td>
    </tbody>
  </table>
      <div>
       <% @book.comments.each do |post_comment| %>
        <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
        <%= link_to post_comment.user.name %>
        <%= post_comment.comment %>
        <%= link_to "destroy", book_comment_path(@book.id, post_comment.id), method: :delete %>
       <% end %>
      </div>
      <div>
       <%= form_with model: [@book, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5' %>
        <%= f.submit "送信" %>
       <% end %>
      </div>
 </div>

  </div>
 </div>
</main>

