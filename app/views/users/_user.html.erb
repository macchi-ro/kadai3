

   <h2 class="mt-3">New book</h2>


   <%= form_with model: Book.new do |f| %>
   <div class="form-group">
    <h5>Title</h5>
     <%= f.text_field :title %>
   </div>
   <div class="form-group">
    <h5>Opinion</h5>
     <%= f.text_area :body %>
   </div>
   <div class="form-group">
     <%= f.submit 'Create Book' %>
   </div>
   <% end %>
  </div>